<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prikaz_greski"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
    <ListView
        android:id="@+id/Greske"
        android:smoothScrollbar="true"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/Lijevo"
	    android:layout_marginRight="@dimen/Desno"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="5dp"
	    android:layout_alignParentTop="true"
	    android:layout_above="@+id/Prolaz"
	    android:background="@color/Korisnik"
	    android:alpha="0.5"
	    android:cacheColorHint="#00000000"
	    android:divider="@color/Divider"
	    android:dividerHeight="2dp">
        
    </ListView>

    <Button
        android:id="@+id/Prolaz"
        android:alpha="0.7"
        android:layout_width="100dp"
        android:layout_height="60dp"
		android:layout_marginTop="15dp"
		android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/Lijevo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_select"
        android:text="@string/Prolaz" 
        android:textColor="@color/mainMenuText"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/Pad"
        android:alpha="0.7"
        android:layout_width="100dp"
        android:layout_height="60dp"
		android:layout_marginTop="15dp"
		android:layout_marginBottom="20dp"
        android:layout_marginRight="@dimen/Desno"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_select"
        android:text="@string/Pad" 
        android:textColor="@color/mainMenuText"
        android:textSize="16sp" />
    

</RelativeLayout>